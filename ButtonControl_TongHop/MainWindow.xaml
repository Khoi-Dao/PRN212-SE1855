<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="Sum of 2 numbers" Height="450" Width="800">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            Hệ Số _a:
        </Label>
        <TextBox Name="txtA"/>
        <Label Target="{Binding ElementName=txtB}">
            Hệ Số _b:
        </Label>
        <TextBox Name="txtB"/>
        <TextBlock>Kết quả:</TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow"/>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10"
                Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://siteoforigin:,,,/Images/sum.jpg" />
                    <TextBlock Margin="5,0,0,0">Tổng</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10"
                Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal" ContextMenuClosing="StackPanel_ContextMenuClosing">
                    <Image Source="pack://siteoforigin:,,,/Images/thoat.png" ContextMenuClosing="Image_ContextMenuClosing" />
                    <TextBlock Margin="5,0,0,0">Thoát</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
